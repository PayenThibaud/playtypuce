@model Carte

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Carte</h4>
    <hr />
    @if (Model == null)
    {
        <p class="text-danger">Carte non trouvé</p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Prix)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prix)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QuantiteEnStock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QuantiteEnStock)
            <dt class="col-sm-2">
                    @Html.DisplayName("Type de carte")
            </dt>
            <dd class="col-sm-10">
                    @ViewBag.TypeDeCarteNom
            </dd>
        </dl>
        <img alt="photo de la carte" src="@Model.ImageCarte" class="img-thumbnail" style="width: 500px" />
        <div>
            <a class="btn btn-primary" asp-action="Index">Retour à la liste des animaux</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Supprimer l'animal</a>
        </div>
    }
</div>
