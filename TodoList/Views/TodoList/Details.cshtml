@model TodoListClass

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TodoListClass</h4>
    <hr />
    @if (Model == null)
    {
        <p class="text-danger">mémo non trouvé</p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StatutEnCours)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StatutEnCours)
            </dd>
        </dl>
        <div>
            <a class="btn btn-primary" asp-action="Index">Retour à la liste des mémo</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Supprimer le mémo</a>
        </div>
    }
</div>

