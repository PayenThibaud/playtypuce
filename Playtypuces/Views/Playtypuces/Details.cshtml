@model Playtypuce
@{
    ViewData["Title"] = "Détails playtypuce";
    Playtypuce playtypuce = Model;
}

@if (playtypuce != null)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@playtypuce.Name</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Html.DisplayNameFor(m => m.Age) : @playtypuce.Age</li>
            <li class="list-group-item">@Html.DisplayNameFor(m => m.Colour) : @playtypuce.Colour</li>
            <li class="list-group-item">@Html.DisplayNameFor(m => m.Gender) : @playtypuce.Gender</li>
        </ul>
        <div class="card-body">
            <a asp-action="Index" class="card-link">Retour à la liste</a>
        </div>
    </div>
}
else
{
    <p class="text-danger">
        Playtypuce non trouvé !
    </p>
}